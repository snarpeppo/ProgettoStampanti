<!doctype html>
<html lang="en">
     <%- include('../views/partials/header.ejs') %>

  <body>
    <%- include('../views/partials/nav.ejs') %>
    

<div class="container-fluid" style="padding: 1% 0% 0% 1%;">
  <div class="row" style="width: 100%;">
    <div class="col-auto">
  <h2><%= name.printername %> Jobs list</h2>
</div>
  <div class="col-auto">
  <select id="select" class="form-select" >
    <% for ( var i = 0; i<name.length; i++ ) { %>
        <option value="<%= name[i] %>"><%= name[i] %></option>
        <% } %>
    </select>
  </div>
 </div>
</div>
  <div class="container-fluid" style="padding: 1% 1% 0% 1%;" >
    <table id="records" class="table table-hover table-responsive table-striped table-borderless" style="width: 100%;">
    
    </table> 
  </div>
  <div class="container-fluid" style="padding: 1% 0% 0% 1%;">
    <div class="row" style="width: 100%;">
      <div class="col-auto">
  <h2>All printers jobs list</h2>
</div>
  <div class="col-auto">
    <select class="form-select">
      <option selected>Show all queued jobs</option>
      <option value="1">Show all completed jobs</option>
    </select>
  </div>
  <div class="col-auto">
    <a href="cancelAll" class="btn btn-outline-secondary">Delete all jobs</a>
  </div>
</div>
</div>
    <div class="container-fluid" style="padding: 1% 1% 2% 1%;" >
    <table id="printer" class="table table-hover table-responsive table-striped table-borderless" style="width: 100%;">
      <thead>
        <tr class='table-dark'>
          <th scope="col">Printer name</th>
          <th scope="col">Job commissioner</th>
          <th scope="col">Date</th>
        </tr>
      </thead>

      <tbody>
        <% for(var i=0; i<job.length; i++){ %>
          <tr>
            <th scope="row"><%= job[i].printername %></th>
            <th scope="row"><%= job[i].owner %></th>
            <th scope="row"><%= job[i].date %></th>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <script type="text/javascript" src="../api/jquery/ajaxGet.js"></script>

   <%- include('../views/partials/footer.ejs') %>
  </body>
</html>
