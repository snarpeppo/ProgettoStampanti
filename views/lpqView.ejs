<!doctype html>
<html lang="en">
     <%- include('../views/partials/header.ejs') %>
     <%- include('../views/partials/nav.ejs') %>

  <body>
<div class="container-fluid" style="padding: 1% 0% 0% 1%;">
  <div class="row" style="width: 100%;">
    <div class="col-auto">
  <h2><%= name.printername %> Jobs list</h2>
</div>
  <div class="col-auto">
  <select id="select" class="form-select" >
    <!-- Nella select vengono iniettati i nomi delle stampanti -->
    <% for ( var i = 0; i<name.length; i++ ) { %>
        <option value="<%= name[i] %>"><%= name[i] %></option>
        <% } %>
    </select>
  </div>
 </div>
</div>
  <div class="container-fluid" style="padding: 1% 0% 0% 1%;" >
    <table id="records" class="table table-hover table-responsive table-striped table-borderless" style="width: 100%;">
      <!-- Mostra tutti i pending jobs iniettati della stampante selezionata -->
    </table>
    
  <div id="empty">
    <!-- Avvisa se la stampante non ha jobs -->
  </div>
  
  </div>
  <div class="container-fluid" style="padding: 3% 0% 0% 1%;">
    <div class="row" style="width: 100%;">
      <div class="col-auto">
  <h2>All printers jobs list</h2>
</div>
  <div class="col-auto">
    <select id='selectJobs' class="form-select">
      <option value="not-completed" selected>Show all queued jobs</option>
      <option value="completed">Show all completed jobs</option>
    </select>
  </div>
  <div class="col-auto">
    <!-- Button disabled perchÃ¨ funzione non introdotta -->
    <button href="cancelAll" class="btn btn-outline-secondary" disabled>Delete all jobs</button>
  </div>
</div>
</div>
    <div class="container-fluid" style="padding: 1% 1% 2% 1%;" >
    <table id="allJobs" class="table table-hover table-responsive table-striped table-borderless">
      <!-- Qui vengono iniettati tutti i jobs di tutte le stampanti -->
    </table>
  </div>

   <script type="text/javascript" src="../api/jquery/ajaxGet.js"></script>
   <script type="text/javascript" src="../api/jquery/lpstatCompletedGet.js"></script>
  </body>

  <%- include('../views/partials/footer.ejs') %>
</html>