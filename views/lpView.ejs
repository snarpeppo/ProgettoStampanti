<!DOCTYPE html>
<html lang="en">
  <%- include('../views/partials/header.ejs') %>
  <%- include('../views/partials/nav.ejs') %>

  <body>
    <div class="container-fluid" style="padding: 1% 0% 0% 1%;">
      <h2>Quick print</h2>

      <div id="result">
        <!-- Alert in caso di errore di stampa -->
      </div>

      <div class="col-4" style="width: 100%; padding: 1% 0% 0% 0%">
        <h5>Selected profile</h5>
      </div>
      <div class="col-4">
        <div class="col-4">
          <select id="selectProfile" class="form-select">
            <!-- Qui vengono iniettati tutti profili creati -->
            <% for ( var i = 0; i<profile.length; i++ ) { %>
                <option value="<%= profile[i] %>"> <%= profile[i] %></option>
                <% } %>
          </select>
        </div>
      </div>

    <div class="container-fluid" style="padding: 2% 0% 0% 0%;">
      <div class="row" style="width: 100%; padding: 1% 0% 0% 0%">
        <div class="col-4">
            <h5>Selected printer</h5>
        </div>
        <div class="col-4">
            <h5>Selected file</h5>
        </div>
        <div class="col-4">
        </div>
      </div>
        <div class="row" style="width: 100%;">
          <div class="col-4">
            <div class="col-8">
              <!-- Select disabled perchè la stampante selezionata per quel profilo non può essere cambiata -->
              <select id="selectPrinter" class="form-select" disabled>
                <% for ( var i = 0; i<name.length; i++ ) { %>
                  <option value="<%= name[i] %>"> <%= name[i] %></option>
                <% } %>
              </select>
            </div>
          </div>
          <div class="col-4">
            <!-- Ricerca in locale il file da stampare -->
            <%- include('../views/options/browseFile.ejs') %>
          </div>
          <div class="col-4">
            <input type='submit'id="button" class="btn btn-outline-secondary" value="Send Request"></a>
          </div>
      </div>
    </div>
      
      <form id="formLp"> 
        <!-- Qui vengono iniettate le common options della stampante una ad una nella grid -->
        <div class="container-fluid" style="padding: 2% 0% 3% 0%;">
          <div class="row" style="width: 100%;">
            <div class="col-6">
              <%- include('../views/options/numberOfCopies.ejs') %>
            </div>
            <div class="col-6">
            </div>
          </div>
          <div class="row" style="width: 100%;">
            <div class="col-4">
          <%- include('../views/options/size.ejs') %>
        </div>
        <div class="col-4"> 
            <%- include('../views/options/side.ejs') %>
          </div>
          <div class="col-4">
            <%- include('../views/options/banner.ejs') %>
          </div>
        </div>
        <div class="row" style="width: 100%;">
          <div class="col-4" style="padding-top: 1%;">
            <%- include('../views/options/quality.ejs') %>
          </div>
          <div class="col-4" style="padding-top: 1%;">
            <%- include('../views/options/orientation-requested.ejs') %>
          </div>
          <div class="col-4" style="padding-top: 1%;">
            <%- include('../views/options/number.ejs') %>
          </div>
        </div>
      </form>

      <form id="oOptions">
        <div id="advancedOptions" style="padding-bottom: 24px; margin-right: 70%;">
              <!-- Qui vengono iniettate le options specifiche della stampante -->
        </div>
      </form>
    </div>
  </div>
    <script type="text/javascript" src="../api/jquery/lpPost.js"></script>
    <script type="text/javascript" src="../api/jquery/printerOptionsGet.js"></script>
    <script type="text/javascript" src="../api/jquery/profileGet.js"></script>
    
  </body>

  <%- include('../views/partials/footer.ejs') %>
</html>