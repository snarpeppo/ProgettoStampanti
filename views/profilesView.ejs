<!DOCTYPE html>
<html lang="en">
  <%- include('../views/partials/header.ejs') %>
  <%- include('../views/partials/nav.ejs') %>

  <body>
    <div class="container-fluid" style="padding: 1% 1% 0% 1%;">
          <h2>Manage profiles</h2>

      <div id="profile">
        <!-- alert -->
      </div>


    <div class="container-fluid" style="padding: 2% 0% 0% 0%;">
      <div class="row" style="width: 100%;">
        <div class="col-6">
          <h4>Selected profile</h4>
        </div>
        <div class="col-6">
        </div>
        <div class="row" style="width: 100%;">
          <div class="col-2">
            <div class="col-auto">
              <select id="selectProfile" class="form-select">
                <% for ( var i = 0; i<profile.length; i++ ) { %>
                    <option value="<%= profile[i] %>"> <%= profile[i] %></option>
                    <% } %>
              </select>
              </div>
          </div>
          <div class="col-2">
            <input type='submit'id="delete" class="btn btn-outline-secondary" value="Delete profile"></a>
          </div>
      </div>
    </div>

    <div class="container-fluid" style="padding: 2% 0% 0% 0%;">
    <div class="row" style="width: 100%;">
      <div class="col-4">
        <h4>Profile name</h4>
      </div>
      <div class="col-4">
        <h4>Selected Printer</h4>
      </div>
      <div class="row" style="width: 100%;">
      <div class="col-4">
        <div class="col-4">
        <input type="text" value="Profilo 1" id="inputText" class="form-control">
      </div>
      </div>
        <div class="col-4">
          <div class="col-8">
            <select id="selectPrinter" class="form-select">
              <% for ( var i = 0; i<name.length; i++ ) { %>
                <option value="<%= name[i] %>"> <%= name[i] %></option>
              <% } %>
            </select>
          </div>
      </div>
      <div class="col-4">
        <div class="col-4">
          <input type='submit'id="button" class="btn btn-outline-secondary" value="Save changes"></a>
        </div>
      </div>
    </div>
  </div>
        <form id="formLp">
          <div class="container-fluid" style="padding: 2% 0% 0% 0%;">
            <div class="row" style="width: 100%;">
              <div class="col-4">
                <%- include('../views/options/size.ejs') %>
              </div>
              <div class="col-4">
                <%- include('../views/options/side.ejs') %>
              </div>
              <div class="col-4">
                <%- include('../views/options/banner.ejs') %>
              </div>
            </div>
            <div class="row" style="width: 100%;">
              <div class="col-4" style="padding-top: 1%">
                <%- include('../views/options/quality.ejs') %>
